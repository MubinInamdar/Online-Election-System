@model OnlineElections.Models.Candidate

@{
    ViewBag.Title = "CandidateRegistration";
}
<div class="row">
    <section>
        <img id="title" src="~/Images/Img1.png" style="width:100%;max-width:300px">
    </section>
</div>
<h2>CandidateRegistration</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Candidate</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Voter Id :", htmlAttributes: new { @class = "control-label col-md-2" })
        <br>
        <div class="col-md-10">
            @ViewBag.VoterId
            @Html.Hidden("VoterId", (int)ViewBag.VoterId)
            @Html.ValidationMessageFor(model => model.VoterId, "", new { @class = "text-danger" })


        </div>
    </div>
    <br>
    <div class="form-group">
        @Html.Label("Party Name :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PartyName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Party Name" } })
            @Html.ValidationMessageFor(model => model.PartyName, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-dark" />
        </div>
    </div>
</div>
}


